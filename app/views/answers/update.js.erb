$('.flash').html('<%= render 'shared/flash' %>');

<% if @answer.errors.present? %>
$('.list-group-item[data-answer-id=<%= @answer.id %>] .edit-answer-errors').html('<%= render 'shared/errors', resource: @answer %>');
<% else %>
$('.list-group-item[data-answer-id=<%= @answer.id %>]').html('<%= j render @answer %>');
<% end %>
